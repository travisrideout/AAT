<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aatdevelopment"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/gun_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.aatdevelopment.MainMenu"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.aatdevelopment.FallingPlate"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.example.aatdevelopment.FALLINGPLATE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.aatdevelopment.HardwareTest"
            android:label="@string/title_activity_hardware_test"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.example.aatdevelopment.HARDWARETEST" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.aatdevelopment.Prefs"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.example.aatdevelopment.PREFS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>       
        <activity
            android:name="com.example.aatdevelopment.GameSettings"
            android:label="@string/title_activity_game_settings" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.example.aatdevelopment.GAMESETTINGS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
